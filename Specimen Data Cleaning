    "# Sample dataset (in real project this would be 60,000+ rows)\n",
    "data = {\n",
    "    'specimen_id': ['SP001', 'SP002', 'SP003', 'SP004', 'SP005'],\n",
    "    'collection_date': ['2025-01-15', '2025-01-16', '2025-01-17', '', '2025-01-19'],\n",
    "    'facility': ['Kaduna General', 'Lafia Clinic', 'Abuja Lab', 'Port Harcourt', 'Kano Centre'],\n",
    "    'status': ['Collected', 'In Transit', 'Received', 'Collected', 'Delayed'],\n",
    "    'turnaround_days': [5, 3, None, 7, 12]\n",
    "}\n",
    "\n",
    "df = pd.DataFrame(data)\n",
    "df"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Clean the data\n",
    "df['collection_date'] = pd.to_datetime(df['collection_date'], errors='coerce')\n",
    "df['status'] = df['status'].str.strip().str.title()\n",
    "df['turnaround_days'] = pd.to_numeric(df['turnaround_days'], errors='coerce')\n",
    "\n",
    "print(\"Cleaned dataset:\")\n",
    "df"
   ]
  },
